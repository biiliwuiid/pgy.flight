<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ff.theme.light.dark_blue.colorPrimary</item>
        <item name="colorPrimaryDark">@color/ff.theme.light.dark_blue.colorPrimaryDark</item>
        <item name="colorAccent">@color/ff.theme.light.dark_blue.colorAccent</item>

        <item name="android:windowBackground">@color/ff.background</item>

        <item name="android:textColorPrimary">@color/ff.textColor.title</item>
        <item name="android:textColorSecondary">@color/ff.textColor.text</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="alertDialogTheme">@style/FFDialog</item>

        <item name="android:textViewStyle">@style/FFTheme.Widget.TextView</item>

    </style>

    <style name="FFTheme" parent="AppTheme">
        <item name="characterViewStyle">@style/FFTheme.Widget.CharacterView</item>
    </style>

    <style name="FFTheme.Splash">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="colorAccent">@color/ff.theme.light.dark_blue.colorPrimary</item>
        <item name="android:textColorPrimary">@color/ff.theme.light.dark_blue.colorPrimary</item>
        <item name="android:textColorSecondary">@color/ff.theme.light.dark_blue.colorPrimaryDark</item>

        <item name="android:windowBackground">@color/ff.theme.light.dark_blue.colorPrimary</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="FFTheme.Main">
        <!--<item name="android:alertDialogTheme">@null</item>-->
        <!--<item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>-->
    </style>

    <style name="FFTheme.WebView">
        <item name="colorPrimary">@color/ff.theme.black.colorPrimary</item>
        <item name="colorPrimaryDark">@color/ff.theme.black.colorPrimaryDark</item>
        <item name="colorAccent">@color/ff.theme.black.colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="FFTheme.SignIn">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ff.theme.blue.colorAccent</item>

        <item name="android:windowBackground">@color/ff.splash.background</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="FFTheme.Detail">
        <item name="colorPrimary">@color/ff.theme.light.dark_blue.colorPrimary</item>
        <item name="colorPrimaryDark">@color/ff.theme.light.dark_blue.colorPrimaryDark</item>
        <item name="colorAccent">@color/ff.theme.light.dark_blue.colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="FFDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ff.divider.height</item>
        <item name="android:background">@color/ff.divider</item>
    </style>

    <style name="FFEmptyView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7C7C7D</item>
        <item name="android:lineSpacingMultiplier">@integer/lineSpacingMultiplier</item>
    </style>

    <style name="FFDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/ff.alertDialog.colorAccent</item>
        <!--<item name="windowMinWidthMinor">@dimen/ff.common.dialogWidth</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">@string/ff.font.roboto.regular</item>
    </style>

    <!-- Main -->

    <style name="FFStyle.MainTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">@dimen/ff.main.tab.indicator.height</item>
        <item name="tabPaddingStart">@dimen/ff.padding.normal</item>
        <item name="tabPaddingEnd">@dimen/ff.padding.normal</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/FFTextAppearance.MainTab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="FFTheme.Widget"/>

    <style name="FFTheme.Widget.Toolbar.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontPath">@string/ff.font.roboto.monospace.regular</item>
    </style>

    <style name="FFTheme.Widget.PopupTheme.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontPath">@string/ff.font.roboto.regular</item>
    </style>

    <style name="FFTheme.Widget.Toolbar.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="fontPath">@string/ff.font.roboto.regular</item>
    </style>

    <style name="FFTheme.Widget.PopupTheme.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="fontPath">@string/ff.font.roboto.regular</item>
    </style>

    <style name="FFTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">@string/ff.font.roboto.regular</item>
    </style>

    <style name="FFTheme.Widget.CharacterView">
        <item name="characterTextColor">@color/ff.theme.white.characterView.textColor</item>
        <item name="backgroundRoundAsCircle">false</item>
        <item name="backgroundColor">@color/ff.theme.white.characterView.BackgroundColor</item>
        <item name="backgroundRadius">0dp</item>
        <item name="characterPadding">@dimen/ff.padding.large</item>
    </style>

    <style name="FFTextAppearance"/>

    <style name="FFTextAppearance.ToolbarTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fontPath">@string/ff.font.roboto.regular</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="FFTextAppearance.MainTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="FFTextAppearance.Settings.Section" parent="FFTextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/ff.padding.large</item>
        <item name="android:paddingRight">@dimen/ff.padding.large</item>
        <item name="android:layout_marginBottom">@dimen/ff.margin.small</item>
        <item name="android:textSize">@dimen/ff.textSize.tips</item>
        <item name="android:textColor">@color/ff.textColor.tips</item>
    </style>

    <style name="FFTextAppearance.Settings.ItemTitle" parent="FFTextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/ff.padding.large</item>
        <item name="android:paddingRight">@dimen/ff.padding.large</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/ff.textColor.title</item>
        <item name="android:textSize">@dimen/ff.textSize.text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FFTextAppearance.Settings.ItemDescription" parent="FFTextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/ff.padding.large</item>
        <item name="android:layout_marginRight">@dimen/ff.padding.large</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd" tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:textColor">@color/ff.textColor.tips</item>
        <item name="android:textSize">@dimen/ff.textSize.tips</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="FFButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:padding">@dimen/ff.padding.small</item>
        <item name="android:textSize">@dimen/ff.textSize.button</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="FFButton.About">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_text_color_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FFLayout"/>

    <style name="FFLayout.Settings.Item" parent="FFLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ff.settings.item.minHeight</item>
        <item name="android:background">@color/ff.white</item>
    </style>

    <style name="Toolbar.Dark" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/ff.white</item>
        <item name="android:textColorPrimary">@color/ff.white</item>
    </style>

    <style name="CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
</resources>
